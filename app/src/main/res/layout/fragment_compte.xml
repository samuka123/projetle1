<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CompteFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_profil_compte"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/profil_defaut"
            app:civ_border_width="2dp"
            app:civ_border_color="#FF000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="image de profil" />

        <Button
            android:id="@+id/btn_profil"
            android:layout_width="161dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:background="@drawable/bouton_rond"
            android:baselineAligned="false"
            android:text="@string/btn_profil"
            app:layout_constraintTop_toBottomOf="@id/img_profil_compte"
            app:layout_constraintStart_toStartOf="@id/img_profil_compte"
            app:layout_constraintEnd_toEndOf="@id/img_profil_compte" />

        <Button
            android:id="@+id/btn_deconnexion"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bouton_rond"
            android:gravity="center"
            android:text="@string/btn_deconnexion"
            app:icon="@drawable/baseline_logout_24"
            app:layout_constraintTop_toBottomOf="@id/btn_profil"
            app:layout_constraintEnd_toEndOf="@id/img_profil_compte" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>

