<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bb"
    tools:context=".Profil">


    <ImageView
        android:id="@+id/img_profil"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/profil_defaut"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        android:contentDescription="image de profil " />

    <EditText
        android:id="@+id/prenom_profil"

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:autofillHints="prenom"
        android:drawablePadding="10dp"
        android:drawableStart="@drawable/baseline_person_24"
        android:hint="Votre prÃ©nom"
        android:inputType="textPersonName"
        android:padding="13dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_profil"
        app:layout_constraintWidth_percent=".8" />

    <EditText
        android:id="@+id/nom_profil"
        android:hint="Votre nom"
        android:autofillHints="nom"
        android:inputType="textPersonName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="13dp"
        android:layout_marginTop="20dp"
        android:drawableStart="@drawable/baseline_person_24"
        android:drawablePadding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/prenom_profil"
        app:layout_constraintWidth_percent=".8" />


    <EditText
        android:id="@+id/email_profil"
        android:hint="Votre Email"
        android:autofillHints="email"
        android:inputType="textEmailAddress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="13dp"
        android:layout_marginTop="20dp"
        android:drawableStart="@drawable/baseline_email_24"
        android:drawablePadding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nom_profil"
        app:layout_constraintWidth_percent=".8" />

    <EditText
        android:id="@+id/adresse_profil"
        android:hint="Votre adresse"
        android:autofillHints="adressz"
        android:inputType="textPostalAddress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="13dp"
        android:layout_marginTop="20dp"
        android:drawableStart="@drawable/baseline_add_location_24"
        android:drawablePadding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email_profil"
        app:layout_constraintWidth_percent=".8" />

    <Button
        android:id="@+id/btn_update_profil"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#2196F3"
        android:drawablePadding="10dp"

        android:padding="13dp"
        android:text="@string/Update"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/adresse_profil"
        app:layout_constraintWidth_percent=".5"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
