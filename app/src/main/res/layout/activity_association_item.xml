<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/association_logo_id"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/item_action" />

    <TextView
        android:id="@+id/association_name_id"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:text="@string/association_name"
        android:textColor="@color/purple_700"
        android:textSize="20dp"
        android:padding="30dp"/>

    <Button
        android:id="@+id/btn_ajoutassociation"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="130dp"
        android:layout_marginBottom="120dp"
        android:background="@drawable/bouton_rond"
        android:text="@string/btn_deconnexion"
        app:iconTint="@color/purple_500"
        app:layout_constraintWidth_percent="0.5" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:itemIconTint="@color/colorPrimary"
        app:itemTextColor="@color/colorPrimary"
        app:menu="@menu/menu_item"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />



</LinearLayout>