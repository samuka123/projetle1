<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <Button
        android:id="@+id/btn_association"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginBottom="90dp"
        android:background="@drawable/bouton_rond"
        android:text="@string/btn_association"
        android:visibility="visible"
        app:layout_constraintWidth_percent="0.5" />

    <Button
        android:id="@+id/btn_donation"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:background="@drawable/bouton_rond"
        android:text="@string/btn_donation"
        app:layout_constraintWidth_percent="0.5" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:src="@drawable/Image_Donation4"

        />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_marginBottom="150dp"
        android:layout_gravity="bottom"
        android:src="@drawable/Image_Donation3" />

</FrameLayout>